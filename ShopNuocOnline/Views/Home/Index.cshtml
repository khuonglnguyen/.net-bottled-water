@model IEnumerable<ShopNuocOnline.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="carousel">
    <img style="width:100%;height:600px" src="~/Assets/images/bg-juiceee.jpg" />
</div>
<!-- fashion section start -->
<div class="fashion_section">
    <h1 style="text-align: center; font-weight: bold; margin-top: 50px; font-family: 'Arbutus Slab', serif; ">Menu Drinks</h1>
    <div id="main_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active mt-5">
                <div class="container">
                    <div class="fashion_section_2">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-sm-4">
                                    <div class="box_main">
                                        <div class="tshirt_img"><img src="@item.Image" style="height: 300px"></div>
                                        <p class="price_text font-weight-bold"><span style="color: #262626;">$@item.ProductPrice</span></p>
                                        <h4 style="text-align:center">@item.Name</h4>
                                        <div class="buy_bt"><a href="#">Buy Now</a></div>
                                        <div class="btn_main">
                                            @Html.ActionLink("Xem Chi Tiết", "ChiTiet1", "Details", new { id = item.Id }, new { @class = "nav-link" })
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- fashion section end -->
