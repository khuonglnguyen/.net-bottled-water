@model ShopNuocOnline.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>
@if (ViewBag.success != null)
{
    <h3>Cập nhật thàng công!</h3>
}

<form action="/Admin/Products/Edit" method="post" enctype="multipart/form-data">
    <input value="@Model.Id" hidden name="Id" />
    <div class="form-group">
        <label for="name">Tên Sản Phẩm</label>
        <input type="text" class="form-control" id="name" name="name" required value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="c">Hình Ảnh</label>
        <img src="@Model.Image" style="height: 200px" />
    </div>
    <div class="form-group">
        <label for="image">Chọn Hình Ảnh Mới</label>
        <input type="file" class="form-control" id="image" name="image">
    </div>
    <div class="form-group">
        <label for="ProductPrice">Đơn Giá</label>
        <input type="number" class="form-control" id="ProductPrice" name="ProductPrice" required value="@Model.ProductPrice">
    </div>
    <div class="form-group">
        <label for="ProductPrice">Mô Tả</label>
        <textarea class="form-control" id="ProductPrice" name="Description" required>@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="Quantity">Số Lượng</label>
        <input type="number" class="form-control" id="ProductPrice" name="Quantity" required value="@Model.Quantity">
    </div>
    <button type="button" class="btn btn-secondary" onclick="location = '/Admin/Products'">Trở Lại</button>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>