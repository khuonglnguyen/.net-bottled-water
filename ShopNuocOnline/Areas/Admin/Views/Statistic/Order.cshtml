@model List<ShopNuocOnline.Models.Order>
@{
    ViewBag.Title = "Thống Kê Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int count = 1;
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách đơn hàng</h1>
    <div class="mb-3">
        <form action="/Admin/Statistic/Order" method="get">
            Từ <input type="date" class="form-control col-2" name="from" value="@ViewBag.from.ToString("yyyy-MM-dd")" />
            Đến <input type="date" class="form-control col-2" name="to" value="@ViewBag.to.ToString("yyyy-MM-dd")" />
            <button class="btn btn-primary mt-3" type="submit">Hiển thị</button>
            @if (Model.Count > 0)
            {
                <a class="btn btn-success mt-3" href="/Admin/Statistic/DownloadExcelStatisticOrder?from=@ViewBag.from&to=@ViewBag.to">Xuất Excel</a>
            }
        </form>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>User ID</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>@item.UserId</td>
                                <td>@item.OrderDate</td>
                                <td>$@item.Total</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
